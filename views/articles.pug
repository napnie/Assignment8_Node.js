extends layout

block content
    h1= article.title
    h4.font-weight-light.text-right Author: #{article.author}
    br
    p.lead= article.body
    hr
    a.btn.btn-primary(href='/articles/edit/'+article._id, role='button') Edit
    |
    a.btn.btn-danger.delete-article(href='#'+article._id, role='button', data-id=article._id) Delete